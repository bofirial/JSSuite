@model JS.Suite.Hub.Models.Account.SetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("SetPassword", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <h2>@Localization.ChangeYourLocalPassword</h2>

    @Html.ValidationSummaryAlert()

    using (Html.FieldGroup(g => g))
    {
        @Html.FieldFor(m => m.UserId).AsHidden()
        @Html.FieldFor(m => m.ConfirmationToken).AsHidden()
    
        @Html.FieldFor(m => m.NewPassword).WithFieldIcon(FAIcons.Key).WithCustomLayoutClasses("col-sm-6", "col-sm-offset-3")
        @Html.FieldFor(m => m.ConfirmPassword).WithFieldIcon(FAIcons.Key).WithCustomLayoutClasses("col-sm-6", "col-sm-offset-3")
    }

    using (Html.ButtonGroup(g => g))
    {
        @Html.Button(Localization.Save).WithCustomLayoutClasses("col-sm-4", "col-sm-offset-4").AsSubmit()
    }

    using (Html.TextGroup(g => g))
    {
        <div class="col-xs-12 loginMessage">
            <p>@Html.ActionLink(Localization.BackToTheLoginScreen, "Login")</p>
        </div>
    }
}
