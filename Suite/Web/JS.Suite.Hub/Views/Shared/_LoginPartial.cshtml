@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new {area=""}, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        string userName = !String.IsNullOrEmpty(ViewBag.NewUserName) ? ViewBag.NewUserName : User.Identity.GetUserName();
    
    <ul class="nav navbar-nav navbar-right">
        <li>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@userName<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink(Localization.Profile, "Manage", "Account", routeValues: new {area=""}, htmlAttributes: new { title = "Manage" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">@Localization.LogOff</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Localization.LogIn, "Login", "Account", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
